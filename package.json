{
  "name": "felix-lowcode-platform",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.27.0",
  "scripts": {
    "dev": "pnpm --filter @lowcode-platform/web dev & pnpm --filter @lowcode-platform/server start:dev",
    "dev:web": "pnpm --filter @lowcode-platform/web dev",
    "dev:server": "pnpm --filter @lowcode-platform/server start:dev",
    "build": "pnpm build:rust && pnpm --filter @lowcode-platform/web build && pnpm --filter @lowcode-platform/server build",
    "build:web": "pnpm build:rust && pnpm --filter @lowcode-platform/web build",
    "build:server": "pnpm --filter @lowcode-platform/server build",
    "build:rust": "bash scripts/build-rust.sh",
    "build:rust:watch": "bash scripts/build-rust.sh && cargo watch -w packages/rust-json-core/src -s 'bash scripts/build-rust.sh'",
    "start": "pnpm --filter @lowcode-platform/web start & pnpm --filter @lowcode-platform/server start:prod",
    "start:web": "pnpm --filter @lowcode-platform/web start",
    "start:server": "pnpm --filter @lowcode-platform/server start:prod",
    "lint": "pnpm --filter @lowcode-platform/web lint && pnpm --filter @lowcode-platform/server lint",
    "test": "pnpm --filter @lowcode-platform/web test",
    "test:server": "pnpm --filter @lowcode-platform/server test"
  },
  "devDependencies": {
    "typescript": "^5"
  }
}
