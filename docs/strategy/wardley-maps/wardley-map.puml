@startuml Wardley_Map
!theme plain
skinparam linetype ortho

title Felix 低代码平台 - 沃德利地图 (Wardley Map)

' ============================================
' 价值网络和组件演化阶段
' ============================================
'
' Y轴（从上到下）：价值网络 - 从用户需求到基础设施
' X轴（从左到右）：演化阶段 - Genesis → Custom Built → Product → Commodity
'

package "用户需求层 (User Needs)" #E3F2FD {
  class UserNeeds {
    + 页面设计师需求
    + 开发者需求
    + 终端用户需求
    --
    快速搭建页面
    可视化编辑
    代码导出
    页面访问
  }
}

package "应用层 (Application)" #BBDEFB {
  class VisualEditor {
    + 可视化编辑器
    --
    拖拽式编辑
    实时预览
    属性配置
    布局调整
  }

  class TemplateSystem {
    + 模板系统
    --
    模板库
    模板应用
    模板管理
  }

  class Collaboration {
    + 协作功能
    --
    多人编辑
    实时同步
    冲突解决
  }
}

package "平台层 (Platform)" #90CAF9 {
  class ComponentSystem {
    + 组件系统
    --
    组件库
    组件管理
    自定义组件
  }

  class DataBinding {
    + 数据绑定
    --
    数据源管理
    数据映射
    实时更新
  }

  class ThemeSystem {
    + 主题系统
    --
    主题编辑
    主题管理
    响应式设计
  }

  class CodeGenerator {
    + 代码生成引擎
    --
    React 代码生成
    Next.js 项目导出
    Git 集成
  }
}

package "基础设施层 (Infrastructure)" #64B5F6 {
  class DeploymentService {
    + 部署服务
    --
    自动化部署
    环境管理
    版本控制
  }

  class StorageService {
    + 存储服务
    --
    文件存储
    对象存储
    资源管理
  }

  class CDNService {
    + CDN 服务
    --
    静态资源加速
    全球分发
    缓存策略
  }

  class DatabaseService {
    + 数据库服务
    --
    数据持久化
    数据查询
    数据备份
  }

  class AuthService {
    + 认证服务
    --
    用户认证
    权限管理
    OAuth 集成
  }
}

